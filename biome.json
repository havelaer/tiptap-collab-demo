{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "files": {
        "includes": ["./src/**/*", "./prisma/seed/**/*", "!**/generated/**/*"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100,
        "attributePosition": "auto"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    }
}
